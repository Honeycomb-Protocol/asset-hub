{
  "name": "@honeycomb-protocol/asset-hub",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "link:currency": "cd ./packages/hpl-currency-manager && yarn link && cd ../.. && yarn link @honeycomb-protocol/currency-manager",
    "link:payment": "cd ./packages/hpl-payment-manager && yarn link && cd ../.. && yarn link @honeycomb-protocol/payment-manager",
    "link": "yarn link:currency && yarn link:payment",
    "prepare": "yarn run link",
    "precompile": "node ./scripts/precompile.js",
    "compile": "tsc",
    "build:sdk": "yarn solita && yarn compile",
    "build": "yarn build:sdk",
    "build:currency": "PROGRAM_NAME=currency-manager yarn build",
    "build:payment": "PROGRAM_NAME=payment-manager yarn build",
    "build:all": "yarn build:currency && yarn build:payment",
    "deploy": "anchor deploy",
    "deploy:currency": "yarn deploy --package-name hpl-currency-manager",
    "deploy:payment": "yarn deploy --package-name hpl-payment-manager",
    "build-deploy": "yarn build:all && yarn deploy",
    "currency": "yarn build:currency && yarn deploy:currency",
    "payment": "yarn build:payment && yarn deploy:payment",
    "test": "jest --verbose",
    "rollout": "node ./scripts/rollout.js",
    "publishall": "node ./scripts/publishall.js"
  },
  "dependencies": {
    "@honeycomb-protocol/events": "^0.1.21",
    "@honeycomb-protocol/hive-control": "^0.2.2",
    "@metaplex-foundation/js": "^0.19.5",
    "@metaplex-foundation/mpl-bubblegum": "^0.7.0",
    "@metaplex-foundation/mpl-candy-guard": "^0.5.0",
    "@metaplex-foundation/mpl-token-auth-rules": "^1.2.0",
    "@metaplex-foundation/mpl-token-metadata": "2.8.3",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@solana/spl-account-compression": "^0.1.10",
    "@solana/spl-token": "^0.3.8",
    "@solana/web3.js": "^1.87.1",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@metaplex-foundation/solita": "^0.19.3",
    "@types/bn.js": "^5.1.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.5.1",
    "@types/yargs": "^17.0.20",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^4.3.5"
  }
}
