{
  "name": "@honeycomb-protocol/asset-hub",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "node ./scripts/postinstall.js",
    "link:character-manager": "cd ./packages/hpl-character-manager && yarn link && cd ../.. && yarn link @honeycomb-protocol/character-manager",
    "link:currency-manager": "cd ./packages/hpl-currency-manager && yarn link && cd ../.. && yarn link @honeycomb-protocol/currency-manager",
    "link:payment-manager": "cd ./packages/hpl-payment-manager && yarn link && cd ../.. && yarn link @honeycomb-protocol/payment-manager",
    "link": "yarn link:character-manager && yarn link:currency-manager && yarn link:payment-manager",
    "prepare": "yarn run link",
    "build": "solita",
    "postbuild": "node ./scripts/postbuild.js",
    "build:character-manager": "PROGRAM_NAME=character-manager yarn build",
    "build:currency-manager": "PROGRAM_NAME=currency-manager yarn build",
    "build:payment-manager": "PROGRAM_NAME=payment-manager yarn build",
    "build:resource-manager": "PROGRAM_NAME=resource-manager yarn build",
    "build:all": "yarn build:character-manager && yarn build:currency-manager && yarn build:payment-manager",
    "deploy": "anchor deploy",
    "deploy:character-manager": "yarn deploy --program-name hpl-character-manager",
    "deploy:currency-manager": "yarn deploy --program-name hpl-currency-manager",
    "deploy:payment-manager": "yarn deploy --program-name hpl-payment-manager",
    "deploy:resource-manager": "yarn deploy --program-name hpl-resource-manager",
    "deploy:all": "yarn deploy",
    "lfg:resource-manager": "yarn build:resource-manager && yarn deploy:resource-manager",
    "lfg:character-manager": "yarn build:character-manager && yarn deploy:character-manager",
    "lfg:currency-manager": "yarn build:currency-manager && yarn deploy:currency-manager",
    "lfg:payment-manager": "yarn build:payment-manager && yarn deploy:payment-manager",
    "lfg": "yarn build:all && yarn deploy:all",
    "test": "jest hpl-resource-manager.low.test.ts",
    "compile": "tsc",
    "rollout": "node ./scripts/rollout.js",
    "publishall": "node ./scripts/publishall.js"
  },
  "dependencies": {
    "@honeycomb-protocol/edge-client": "^0.0.4-beta.6",
    "@honeycomb-protocol/events": "^0.1.21",
    "@honeycomb-protocol/hive-control": "^0.2.16",
    "@metaplex-foundation/js": "^0.19.5",
    "@metaplex-foundation/mpl-bubblegum": "^0.7.0",
    "@metaplex-foundation/mpl-candy-guard": "^0.5.0",
    "@metaplex-foundation/mpl-token-auth-rules": "^1.2.0",
    "@metaplex-foundation/mpl-token-metadata": "2.8.3",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@solana/spl-account-compression": "^0.1.10",
    "@solana/spl-token": "^0.3.11",
    "@solana/web3.js": "^1.87.1",
    "@urql/core": "^4.2.3",
    "keccak": "^3.0.4",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@metaplex-foundation/solita": "^0.20.1",
    "@types/bn.js": "^5.1.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.5.1",
    "@types/yargs": "^17.0.20",
    "colors": "^1.4.0",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^4.3.5"
  }
}
